{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"],
      "~layout/*": ["./src/layouts/*"],      
      "~components/*": ["./src/components/*"],
      "~utils/*": ["./src/utils/*"],      
      "~state/*": ["./src/states/*"],
      "~helpers/*": ["./src/helpers/*"],
      "~redux/*": ["./src/redux/*"],
      "~pages/*": ["./src/pages/*"],
      "~style/*": ["./src/styles/*"],
      "~apis/*": ["./src/apis/*"],
      "~types/*": ["./src/types/*"],
      "~constants/*": ["./src/constants/*"],
      "~i18n/*": ["./src/i18n/*"],
      "~configs/*": ["./src/configs/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
